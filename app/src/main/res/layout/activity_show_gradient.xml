<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ShowGradientActivity">

    <org.alie.paintgradientwork.view.BitmapGradientView
        android:id="@+id/bgv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <org.alie.paintgradientwork.view.RadialGradientView
        android:id="@+id/rgv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        />

    <org.alie.paintgradientwork.view.LinearGradientView
        android:id="@+id/lgv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        />
    <org.alie.paintgradientwork.view.SweepGradientView
        android:id="@+id/sgv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        />
</LinearLayout>